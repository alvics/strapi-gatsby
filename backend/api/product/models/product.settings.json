{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "product"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text"
    },
    "price": {
      "type": "decimal"
    },
    "qty": {
      "type": "integer"
    },
    "categories": {
      "collection": "category",
      "via": "products"
    },
    "sizes": {
      "type": "enumeration",
      "enum": [
        "small_17cm",
        "medium_18cm",
        "large_19cm"
      ],
      "required": false
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "url": {
      "type": "string"
    },
    "featured": {
      "type": "boolean"
    }
  }
}
